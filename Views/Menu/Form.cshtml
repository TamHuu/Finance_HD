@using Finance_HD.Common
@model Finance_HD.Models.SysMenu

@{
    bool isEdit = Model.Ma != Finance_HD.Helpers.CommonGuids.defaultUID;
    ViewData["Title"] = isEdit ? "Chỉnh sửa" : "Thêm mới";
    string formAction = isEdit ? "Edit" : "Add";
    string defaultUID = Finance_HD.Helpers.CommonGuids.defaultUID.ToString();

}
<div class="col-md-6">
    <div class="card shadow-lg">
        <div class="card-header">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <div class="col-md-6">
            </div>
            <form id="Form">
                <input type="hidden" id="Ma" name="Ma" value="@Model.Ma" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Website">Website sử dụng<span style="color: red;">*</span></label>
                            <select class="form-control form-control-sm" id="cboUsingFor" aria-invalid="false">
                                <!option value="@Enum.GetName(typeof(WebsiteUsing), WebsiteUsing.all)" @(Model.UsingFor == Enum.GetName(typeof(WebsiteUsing), WebsiteUsing.all) ? "selected" : "")>Tất cả</!option>
                                <!option value="@Enum.GetName(typeof(WebsiteUsing), WebsiteUsing.qlcv)" @(Model.UsingFor == Enum.GetName(typeof(WebsiteUsing), WebsiteUsing.qlcv) ? "selected" : "")>Quản lý công việc</!option>
                                <!option value="@Enum.GetName(typeof(WebsiteUsing), WebsiteUsing.tmtt)" @(Model.UsingFor == Enum.GetName(typeof(WebsiteUsing), WebsiteUsing.tmtt) ? "selected" : "")>Thu mua tập trung</!option>
                                <!option value="@Enum.GetName(typeof(WebsiteUsing), WebsiteUsing.xncovid)" @(Model.UsingFor == Enum.GetName(typeof(WebsiteUsing), WebsiteUsing.xncovid) ? "selected" : "")>Xét nghiệm Covid</!option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Code">Code<span style="color: red;">*</span></label>
                            <input type="text" class="form-control form-control-sm" id="Code" name="Code" required value="@Model.Code" placeholder="Nhập code" />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="MenuCha">Menu cha</label>
                            <select class="form-control" id="MenuCha" name="MenuCha">
                              
                            </select>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Name">Tên</label>
                            <input type="text" class="form-control form-control-sm" id="Name" name="Name" required value="@Model.Name"  placeholder="Nhập tên"/>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="STT">Nhập số thứ tự</label>
                            <input type="number" class="form-control form-control-sm" id="STT" name="STT" required value="@Model.Name" placeholder="Nhập số thứ tự"/>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Url">Đường dẫn</label>
                            <input type="text" class="form-control form-control-sm" id="Url" name="Url" required value="@Model.Link" placeholder="Nhập đường dẫn"/>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Icon">Icon</label>
                            <input type="text" class="form-control form-control-sm" id="Icon" name="Icon" required value="@Model.Icon" placeholder="Nhập icon"/>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="MenuCon">Con của menu</label>
                            <select class="form-control" id="MenuCon" name="MenuCon">
                             
                            </select>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Status">Trạng thái</label>
                            <select class="form-control form-control-sm" id="Status" name="Status">
                                <!option value="true" @(Model.Status == true ? "selected" : "")>Hoạt động</!option>
                                <!option value="false" @(!Model.Status == true ? "selected" : "")>Không hoạt động</!option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="action" style="text-align: center;">
                    <a href="/Menu" class="btn btn-danger btn-sm" style="margin-right: 10px;">Huỷ</a>
                    <button type="button" id="btnSave" class="btn btn-primary btn-sm">@ViewData["Title"]</button>
                </div>
            </form>


        </div>
    </div>
</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script defer src="/extendFE/quanlyhethong/menu/form.js"></script>
    <script defer src="/extendFE/common/main.js"></script>
    <script>
        // Pass the isEdit variable to JavaScript
        var isEdit = @Html.Raw(Json.Serialize(isEdit));
        var defaultUID = '@defaultUID'; // Truyền defaultUID vào JavaScript
        console.log("Is Edit:", isEdit);
        console.log("Default UID:", defaultUID);
    </script>
}
