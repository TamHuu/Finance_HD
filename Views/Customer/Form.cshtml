@model Finance_HD.Models.FiaKhachHang

@{
    bool isEdit = Model.Ma != Finance_HD.Helpers.CommonGuids.defaultUID;
    ViewData["Title"] = isEdit ? "Chỉnh sửa" : "Thêm mới";
    string formAction = isEdit ? "Edit" : "Add";
    string defaultUID = Finance_HD.Helpers.CommonGuids.defaultUID.ToString();
}

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">@ViewData["Title"]</h5>
    </div>
    <div class="card-body">
        <form id="Form">
            <input type="hidden" id="Ma" name="Ma" value="@Model.Ma" />
            <input type="hidden" id="DefaultUID" name="DefaultUID" value="@defaultUID" /> 

            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="Branch">Tên chi nhánh:</label>
                        <select class="form-control" id="Branch" name="Branch">
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="Department">Bộ phận:</label>
                        <select class="form-control" id="Department" name="Department">
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="Code">Code</label>
                        <input type="text" class="form-control form-control-sm" id="Code" name="Code" required value="@Model.Code" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="Ten">Tên khách hàng</label>
                        <input type="text" class="form-control form-control-sm" id="Ten" name="Ten" required value="@Model.Ten" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="SoDienThoai">Số điện thoại</label>
                        <input type="text" class="form-control form-control-sm" id="SoDienThoai" name="SoDienThoai" required value="@Model.SoDienThoai" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="DiaChi">Địa chỉ</label>
                        <input type="text" class="form-control form-control-sm" id="DiaChi" name="DiaChi" required value="@Model.DiaChi" />
                    </div>
                </div>
         
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="Status">Trạng thái</label>
                        <select class="form-control form-control-sm" id="Status" name="Status">
                            <!option value="true" @(Model.Status==true ? "selected" : "")>Hoạt động</!option>
                            <!option value="false" @(!Model.Status==true ? "selected" : "")>Không hoạt động</!option>
                        </select>
                    </div>
                </div>
            </div>

            <button type="button" id="btnSave" class="btn btn-primary btn-sm">@ViewData["Title"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script defer src="/extendFE/phanphoi/khachhang/form.js"></script>
    <script>
        var defaultUID = '@defaultUID';
        var maCN = '@Model.MaChiNhanh';
        var MaPB = '@Model.MaPhongBan'
    </script>
}
