@* Danh sách phiếu chi nội bộ đơn vị và bảng kê nộp tiền *@
<div class="card shadow mb-3">
    <div class="card-header bg-primary text-white">@ViewData["Title"]</div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-2 d-flex align-items-center" style="align-items:center">
                <label for="TuNgay" class="mr-2 mb-0">Đến ngày</label>
                <input type="datetime-local" class="form-control form-control-sm custom-datetime" id="TuNgay" name="TuNgay" />
            </div>
            <div class=" col-md-2 d-flex align-items-center" style="align-items:center">
                <label for="DenNgay" class="mr-2 mb-0">Đến ngày</label>
                <input type="datetime-local" class="form-control form-control-sm custom-datetime" id="DenNgay" name="DenNgay" />
            </div>
            <div class="col-md-3 d-flex align-items-center" style="align-items:center">
                <label for="Branch" class="mr-2 mb-0" style="width:27%">Đơn vị đề nghị</label>
                <select class="form-control form-control-sm" id="Branch" name="Branch"></select>
            </div>
            <div class=" col-md-2 d-flex align-items-center" style="align-items:center">
                <button class="btn btn-secondary btn-sm mr-2" id="btnXem">
                    <i class="fas fa-eye"></i> Xem
                </button>
                <button class="btn btn-success btn-sm" id="btnXuatExcel">
                    <i class="fas fa-file-excel"></i> Xuất Excel
                </button>
            </div>
        </div>
    </div>
</div>

