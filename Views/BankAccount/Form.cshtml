@model Finance_HD.Models.FiaTaiKhoanNganHang

@{
    bool isEdit = Model.Ma != Finance_HD.Helpers.CommonGuids.defaultUID;
    ViewData["Title"] = isEdit ? "Chỉnh sửa " : "Thêm mới ";
    string formAction = isEdit ? "Edit" : "Add";
    string defaultUID = Finance_HD.Helpers.CommonGuids.defaultUID.ToString();
}
<div class="col-md-6">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <form id="Form">
                <input type="hidden" id="Ma" name="Ma" value="@Model.Ma" />

                <div class="row">
                    <div class="form-group col-md-4">
                        <label for="Branch">Chi nhánh <span style="color: red;">*</span></label>
                        <select class="form-control form-control-sm" id="Branch" name="Branch">
                         
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="Department">Phòng ban <span style="color: red;">*</span></label>
                        <select class="form-control form-control-sm" id="Department" name="Department">
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="Bank">Ngân hàng <span style="color: red;">*</span></label>
                        <select class="form-control form-control-sm" id="Bank" name="Bank">
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="TienTe">Tiền tệ <span style="color: red;">*</span></label>
                        <select class="form-control form-control-sm" id="TienTe" name="TienTe">
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="SoTaiKhoan">Số tài khoản <span style="color: red;">*</span></label>
                        <input class="form-control form-control-sm" type="number" value="@Model.SoTaiKhoan" placeholder="Nhập số tài khoản" id="SoTaiKhoan" />
                    </div>
                    <div class="form-group col-md-4">
                        <label for="LoaiTaiKhoan">Loại tài khoản <span style="color: red;">*</span></label>
                        <select class="form-control form-control-sm" id="LoaiTaiKhoan" name="LoaiTaiKhoan">
                         
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="DienGiai">Diễn giải <span style="color: red;">*</span></label>
                        <input class="form-control form-control-sm" type="text" value="@Model.DienGiai" placeholder="Nhập diễn giải" id="DienGiai" />
                    </div>
                    <div class="form-group col-md-4">
                        <label for="DongTienThu">Dòng tiền thu <span style="color: red;">*</span></label>
                        <select class="form-control form-control-sm" id="DongTienThu" name="DongTienThu">
                            @foreach (var item in ViewBag.DongTienThu)
                            {
                                <option value="@item.Ma">@item.Ten</option>
                            }
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="DongTienChi">Dòng tiền chi <span style="color: red;">*</span></label>
                        <select class="form-control form-control-sm" id="DongTienChi" name="DongTienChi">
                            @foreach (var item in ViewBag.DongTienChi)
                            {
                                <option value="@item.Ma">@item.Ten</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="Status">Trạng thái</label>
                            <select class="form-control form-control-sm" id="Status" name="Status">
                                <!option value="true" @(Model.Status == true ? "selected" : "")>Hoạt động</!option>
                                <!option value="false" @(!Model.Status == true ? "selected" : "")>Không hoạt động</!option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="button-container">
                    <button type="button" class="btn btn-danger btn-custom" onclick="window.location.href='/BankAccount'">Huỷ</button>
                    <button type="button" id="btnSave" class="btn btn-primary btn-custom">@ViewData["Title"]</button>
                </div>
               

            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script defer src="/extendFE/nganhang/taikhoannganhang/form.js"></script>
    <script defer src="/extendFE/common/main.js"></script>
    <script>
        // Pass the isEdit variable to JavaScript
        var isEdit = @Html.Raw(Json.Serialize(isEdit));
        var defaultUID = '@defaultUID'; // Truyền defaultUID vào JavaScript
        console.log("Is Edit:", isEdit);
        console.log("Default UID:", defaultUID);
    </script>
    <style>
    .button-container {
        display: flex; /* Sử dụng Flexbox */
        justify-content: center; /* Căn giữa */
        gap: 10px; /* Khoảng cách giữa các nút */
        margin-top: 20px; /* Khoảng cách trên cùng */
    }

    .btn-custom {
        padding: 10px 20px; /* Padding cho nút */
        border-radius: 5px; /* Bo tròn các góc */
        transition: background-color 0.3s, box-shadow 0.3s; /* Hiệu ứng chuyển tiếp */
        font-size: 14px; /* Kích thước chữ */
        font-weight: bold; /* Chữ đậm */
    }

    .btn-primary {
        background-color: #007bff; /* Màu nền */
        border: none; /* Không viền */
        color: white; /* Màu chữ */
    }

    .btn-danger {
        background-color: #dc3545; /* Màu nền cho nút Huỷ */
        border: none; /* Không viền */
        color: white; /* Màu chữ */
    }

    .btn-primary:hover, .btn-danger:hover {
        opacity: 0.8; /* Hiệu ứng giảm độ sáng khi hover */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Hiệu ứng bóng */
    }
</style>
}
